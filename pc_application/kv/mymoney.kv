MDScreen:
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: 'main'

                MDBoxLayout:
                    id: main_layout
                    orientation: 'vertical'
                    size_hint_y: 0.9

                Navigation:
                    left_action_items:
                        [['menu', lambda x: nav_drawer.set_state("open")]]

            MDScreen:
                name: 'add_account'

                MDBoxLayout:
                    MDLabel:
                        text: 'TEST'

                Navigation:
                    left_action_items:
                        [['menu', lambda x: nav_drawer.set_state("open")]]
        Menu:
            id: nav_drawer


<Menu>:
    radius: (0, 0, 0, 0)

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint: 1, 1

        MDRectangleFlatButton:
            id: main_button
            text: 'Главная'
            size_hint: 1, None
            size: 0, 100
            on_press: app.main_button_press()
        MDRectangleFlatButton:
            id: add_account_button
            text: 'Добавить'
            size_hint: 1, None
            size: 0, 100
            on_press: app.add_account_button_press()
        MDLabel:


<Navigation>:
    title: "Navigation Drawer"
    elevation: 4
    pos_hint: {"top": 1}
    size_hint_y: 0.1
