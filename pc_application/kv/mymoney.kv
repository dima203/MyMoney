MDScreen:
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: 'main'

                MDBoxLayout:
                    id: main_layout
                    orientation: 'vertical'
                    size_hint_y: 0.9

                    AccountsView:

                Navigation:
                    left_action_items:
                        [['menu', lambda x: nav_drawer.set_state("open")]]

            MDScreen:
                name: 'transactions'

                MDBoxLayout:
                    id: transactions_layout
                    orientation: 'vertical'
                    size_hint_y: 0.9

                Navigation:
                    left_action_items:
                        [['menu', lambda x: nav_drawer.set_state("open")]]
        Menu:
            id: nav_drawer


<Menu>:
    radius: (0, 0, 0, 0)

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint: 1, 1

        MDRectangleFlatButton:
            id: main_button
            text: 'Главная'
            size_hint: 1, None
            size: 0, 100
            on_press: app.main_button_press()
        MDRectangleFlatButton:
            id: add_account_button
            text: 'Транзак*ии'
            size_hint: 1, None
            size: 0, 100
            on_press: app.transactions_button_press()
        MDLabel:


<Navigation>:
    title: "Navigation Drawer"
    pos_hint: {"top": 1}
    size_hint_y: 0.1


<AccountsView>:
    MDList:
        id: accounts_list
        size_hint_y: None
        padding: 20
        bind: {"minimum_height": self.setter('height')}


<CardSwipe>:
    size_hint_y: None
    height: content.height
    type_swipe: "auto"
    on_swipe_complete: app.delete_card(root)

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}

    MDCardSwipeFrontBox:
        OneLineListItem:
            id: content
            text: root.text
            _no_ripple_effect: True
